<%= form_with model: @gunslinger, url: '/gunslingers' do |form| %>
    <%= form.text_field :first_name, value: first_name %>
    <%= form.text_field :last_name, value: last_name %>
    <%= form.text_field :email, value: default_email_address(first_name, last_name) %>
    <%= form.hidden_field :badge_template_id, value: badge_template['id'] %>
    <%= form.submit %>
<% end %>